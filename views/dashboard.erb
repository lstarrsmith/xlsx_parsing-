<html>
<head>
	<title>Dashboard</title>
</head>
<body>
	<script src="//www.google.com/jsapi"></script>
<script src="./chartkick.js"></script>
<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

	<h1> Total Sold: Products </h1>
	<%= column_chart Product.group(:name).sum(:total_sold) %>
	
	<h1> Total Sold: Product Type </h1>
	<%= column_chart Category.group(:name).sum(:total_sold)%>

	<h1> Total Sold: Month </h1>
	<%= column_chart Month.group(:month).sum(:total_sold)%>

	<h1> Profit: Products </h1>
	<%= column_chart Product.group(:name).sum(:total_profit)%>

	<h1> Profit: Product Type </h1>
	<%= column_chart Category.group(:name).sum(:total_profit)%>

	<h1> Profit: Month </h1>
	<%= column_chart Month.group(:month).sum(:total_profit)%>


	<h1>Products</h1>
		<ul>
			<% products.each do |product| %>
			<li><%= product.name %></li>
			<% end %>
		</ul>
</body>
</html>